<% layout('layouts/boiler_plate.ejs') -%>
<div id="map" class="mb-3" style="width: 100%; height: 300px"></div>

<div class="mb-3">
  <a href="/camp_ground/new"> <b>Create CampGrounds</b></a>
</div>

<% for(let data of camp_ground_data) { %>
<div class="card mb-3">
  <div class="row">
    <%if(data.images.length) {%>
    <div class="col-md-4">
      <img
        src="<%=data.images[0].path%>"
        class="img-fluid img-thumbnail"
        alt=""
      />
    </div>
    <%}%>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= data.title %></h5>
        <p class="card-text"><%= data.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= data.location%></small>
        </p>
        <a class="btn btn-primary" href="/camp_ground/<%=data._id %>"
          >View <%=data.title%></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>

<script>
  const mapboxToken = "<%-process.env.MAPBOX_TOKEN%>";
   const colleges= { features: <%-JSON.stringify(camp_ground_data)%>};
</script>
<script src="/javascripts/clusterMap.js"></script>
